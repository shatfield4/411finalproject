<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#393E46">

        <TextView
            android:id="@+id/crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#2274A5"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:text="Crypto Name"
            android:textColor="#2274A5"
            android:textSize="20sp"
            android:fontFamily="@font/sfprotext"
            />


        <TextView
            android:id="@+id/crypto_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $0.00"
            android:textSize="16sp"
            android:fontFamily="@font/sfprotext"/>

        <TextView
            android:id="@+id/crypto_percent_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24h % Change: 0%"
            android:textSize="16sp"
            android:fontFamily="@font/sfprotext"/>

        <TextView
            android:id="@+id/crypto_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24h Volume: $0"
            android:textSize="16sp"
            android:fontFamily="@font/sfprotext"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="36dp"
            android:layout_height="38dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_baseline_star_24" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
